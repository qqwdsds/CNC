<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:clipToPadding="false"
    android:orientation="vertical"
    tools:context=".presentation.friendsScreen.findfriendsscreen.FindFriendsScreenFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/find_user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/font_nunito_semi_bold"
            android:text="@string/find_user"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/close_window_button"
            android:layout_width="51dp"
            android:layout_height="45dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/chat_item_color"
            android:contentDescription="@string/close"
            android:padding="15dp"
            android:scaleType="fitCenter"
            android:src="@drawable/window_exit_image"
            app:layout_constraintBottom_toBottomOf="@+id/find_user_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/find_user_text" />

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintEnd_toEndOf="@id/close_window_button"
            app:layout_constraintStart_toStartOf="@id/find_user_text"
            app:layout_constraintTop_toBottomOf="@id/barrier">

            <SearchView
                android:id="@+id/search_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/chat_item_color"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                android:queryHint="@string/friends_search_hint" />

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="find_user_text, close_window_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/user_data_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp">

                <ImageView
                    android:id="@+id/user_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    tools:src="@drawable/ic_user_placeholder" />

                <TextView
                    android:id="@+id/user_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/font_nunito_semi_bold"
                    android:textSize="23sp"
                    tools:text="Username" />

                <TextView
                    android:id="@+id/user_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/font_nunito_semi_bold"
                    tools:text="User description" />

            </LinearLayout>

            <ImageView
                android:id="@+id/more_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_more"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/card_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:visibility="gone"
                style="@style/SpinKitView.Small.Circle"
                app:SpinKit_Color="@color/green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:visibility="gone"
        style="@style/SpinKitView.Circle"
        app:SpinKit_Color="@color/green"/>

</LinearLayout>