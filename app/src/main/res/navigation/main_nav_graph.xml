<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeScreenFragment">
    <fragment
        android:id="@+id/homeScreenFragment"
        android:name="com.example.cnc.presentation.homeScreen.HomeScreenFragment"
        android:label="fragment_home_screen"
        tools:layout="@layout/fragment_home_screen" >
        <action
            android:id="@+id/action_homeScreenFragment_to_chatsFragment"
            app:destination="@id/chatsFragment"
            app:enterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_right"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_homeScreenFragment_to_friendsScreenFragment"
            app:destination="@id/friendsScreenFragment"
            app:enterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_right"
            app:exitAnim="@anim/fade_out"/>
        <action
            android:id="@+id/action_homeScreenFragment_to_favouritesScreenFragment"
            app:destination="@id/favouritesScreenFragment"
            app:enterAnim="@anim/from_right"
            app:popExitAnim="@anim/to_right"
            app:exitAnim="@anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/chatsFragment"
        android:name="com.example.cnc.presentation.chats.ChatsFragment"
        android:label="fragment_chats"
        tools:layout="@layout/fragment_chats" />
    <fragment
        android:id="@+id/favouritesScreenFragment"
        android:name="com.example.cnc.presentation.favouritesScreen.FavouritesScreenFragment"
        android:label="fragment_favourite_sceen"
        tools:layout="@layout/fragment_favourite_sceen" />
    <fragment
        android:id="@+id/friendsScreenFragment"
        android:name="com.example.cnc.presentation.friendsScreen.FriendsScreenFragment"
        android:label="fragment_friends_screen"
        tools:layout="@layout/fragment_friends_screen" />
</navigation>